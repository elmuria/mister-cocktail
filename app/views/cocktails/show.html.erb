<h1>You choose:</h1>
<br>
<h2><%= @cocktail.name %></h2>
<br>
<br>
<br>
<div class="container">
  <div class="row">
    <% @cocktail.doses.each do |dose|%>
    <div class="col-xs-12 col-sm-6 col-md-4">
        <%= dose.ingredient.name %>:
        <%= dose.description %> -- <%= link_to "Delet this dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%>
        <br>
        <br>
    </div>
    <% end %>
  </div>
</div>
<br>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), {class: "btn btn-success"}%>
<br>
<br>
<%= link_to "Back", cocktails_path, {class: "btn btn-primary"} %>
